            @Html.TextBoxFor(m => m.SecondaryPhone, new { @class = "form-control", @style = "width:20%" })
            @Html.ValidationMessageFor(m => m.SecondaryPhone)
        </li>
        <li>
            @Html.LabelFor(m => m.ShippingAddress)
            @Html.TextBoxFor(m => m.ShippingAddress, new { @class = "form-control", @style = "width:20%" })
        </li>
    </ol>
    <input class="btn btn-primary btn-large" type="submit" value="Register" />
    //</fieldset>
}
